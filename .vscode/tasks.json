{
    "version": "2.0.0",
    "shell": {
        "task": true
    },
    "tasks": [
        {
            "type": "shell",
            "label": "Build Debug",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "linux": {
                "command": "cd ${workspaceRoot}/Builds/LinuxMakefile/ && make CONFIG=Debug -j -s 2>&1 && cd build",
            },
            "osx": {
                "command": "xcodebuild",
                "args": [
                    "-project",
                    "${workspaceRoot}/Builds/MacOSX/${workspaceFolderBasename}.xcodeproj",
                    "-alltargets",
                    "-configuration",
                    "Debug"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "shell",
            "label": "Build Release",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "linux": {
                "command": "cd ${workspaceRoot}/Builds/LinuxMakefile/ && make CONFIG=Release -j -s 2>&1 && cd build",
            },
            "osx": {
                "command": "xcodebuild",
                "args": [
                    "-project",
                    "${workspaceRoot}/Builds/MacOSX//${workspaceFolderBasename}.xcodeproj",
                    "-alltargets",
                    "-configuration",
                    "Release"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "shell",
            "label": "Clean ALL",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "linux": {
                "command": "cd ${workspaceRoot}/Builds/LinuxMakefile/ && make clean",
            },
            "osx": {
                "command": "cd ${workspaceRoot}/Builds/MacOSX/ && rm -rf build",
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}